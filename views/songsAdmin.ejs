<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>MySpotiti</title>
  <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
  <link rel="stylesheet" href="styleMain.css" />
  <script src="scriptAdmin.js" defer></script>
</head>

<body>
  <div id="whole-page-notuser">
    <div class="sidebar-notuser">
      <img src="/assets/images/MySpotitiLogoWithext.png" id="sidebar-logo" alt="" />
      <div id="sidebar-text">

        <div class="sidebar-text" id="Admin-sidebar-overview">Overview</div>
        <div class="sidebar-text" id="Admin-sidebar-songs"
          style="color: #F5833F; font-weight: bold;transform: scale(1.1)">Songs</div>
        <div class="sidebar-text" id="Admin-sidebar-subgenre">Sub Genre</div>
        <div class="sidebar-text" id="sidebar-genre">Genre</div>
      </div>
    </div>
    <div class="header-notuser">


      <button id="profile-btn" class="round-button-notuser">
        <svg xmlns="http://www.w3.org/2000/svg" height="1.5em" viewBox="0 0 448 512">
          <path
            d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
        </svg>
      </button>
    </div>
    <div class="admintable">
      <div class="admintable-header">
        <h1 class="admintable-header-headline">Songs Overview</h1>
        <div class="pagination-row">
          <h1 class="pagination-headline">Page view:</h1>

          <% for (let i=1; i <=pageCount; i++) { %>
            <a class="button" id="pagination" href="/songsAdmin?page=<%= i %>">
              <%= i %>
            </a>
            <% } %>
        </div>
        <button class="button" id="addButton"> Add data</button>

        <input class="admin-searchbar" id="searchBarAdmin" type="text" placeholder="Search" />
        <script>
          let searchBar = document.querySelector('input#searchBarAdmin');

          searchBar.addEventListener('input', async () => {
            const searchValue = searchBar.value.trim().toLowerCase();
            if (searchValue !== "") {
              performSearchAdmin(searchValue);
            }
          });
        </script>
        <div class="filter">
          Filter by:
          <form action="/songsAdmin" method="get">
            <select class="filtering" name="optFilter">
              <option value="genre">Genre</option>
              <option value="subgenre">Sub Genre</option>
              <option value="artist">Artist</option>
              <option value="releaseDate">Created date</option>
            </select>
            is a
            <input class="filtering" type="text" placeholder="type here" name="filterVal"></input>
            <button class="button" id="go-button">GO</button>
          </form>
        </div>
      </div>

      <div class="admintable-result">
        <table class="admintable-result-table">
          <thead>
            <tr>
              <th id="admintable-result-id">ID</th>
              <th id="admintable-result-title">Song title</th>
              <th id="admintable-result-artist">Artist</th>
              <th id="admintable-result-date">Release date</th>
              <th id="admintable-result-sub">Sub genre</th>
              <th id="admintable-result-genre">Genre</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="song-table-body">
            <% if (results.length===0) { %>
              <tr>
                <td colspan="7">No results found</td>
              </tr>
              <% } else { %>
                <% results.forEach((song)=> { %>
                  <tr id="<%= song.idMusik %>">
                    <td>
                      <%= song.idMusik %>
                    </td>
                    <td>
                      <%= song.judul %>
                    </td>
                    <td>
                      <%= song.artis %>
                    </td>
                    <td>
                      <%= song.tglRilis %>
                    </td>
                    <td>
                      <%= song.subNama %>
                    </td>
                    <td>
                      <%= song.genNama %>
                    </td>
                    <td id="action">
                      <!-- edit button -->
                      <button class="pencil-button button" style="
                      height:10%; width:30%;" data-song-id="<%= song.idMusik %>">
                        Edit
                      </button>
                      <!-- delete button -->
                      <button class="trash-button button" style="
                      height:10%; width:30%;" data-song-id="<%= song.idMusik %>">
                        Delete
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                    <% } %>
          </tbody>
        </table>
      </div>
      <script>
        function formatDate(dateString) {
          const date = new Date(dateString);
          const options = { year: 'numeric', month: 'short', day: '2-digit' };
          return date.toLocaleDateString('en-US', options);
        }
      </script>


    </div>
  </div>


  </div>
  <!-- add data popup -->
  <div id="addDataPopUp" class="hidden">
    <div id="premiumForm">
      <div id=premiumHeader>
        <h1>Add data</h1>
        <button id="cancelButton" class="round-button">
          <svg xmlns="http://www.w3.org/2000/svg" height="1em"
            viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path
              d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
          </svg>
        </button>
      </div>

      <form method="post" action="/addSongs" id="premiumtheForm" enctype="multipart/form-data">
        <label for="songsTitle">Songs title</label>
        <input class="form-box" type="text" id="songsTitle" name="songsTitle" />

        <label for="artist">Artist</label>
        <input class="form-box" type="text" id="artist" name="artist" />



        <label for="created-at">Created at</label>
        <input class="form-box" type="date" id="created-at" name="created-at" />

        <label for="subgenre">Sub genre</label>
        <select class="form-box" name="subgenre">
          <% for (let i=0; i < namaSubgenre.length; i++) { %>
            <option value="<%= namaSubgenre[i].nama %>">
              <%= namaSubgenre[i].nama %>
            </option>
            <% } %>
        </select>
        <label for="songscover">Songs cover</label>
        <div class="form-box">
          <input type="file" name="songscover"><br>
        </div>

        <input class="button" id="add-button-in-popup" type="submit" value="add" />
      </form>


    </div>
  </div>
  <!-- update data popup -->
  <div id="updateDataPopUp" class="hidden">
    <div id="premiumForm">
      <div id=premiumHeader>
        <h1>Update data</h1>
        <button id="cancelButton-in-update-popup" class="round-button">
          <svg xmlns="http://www.w3.org/2000/svg" height="1em"
            viewBox="0 0 384 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path
              d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z" />
          </svg>
        </button>
      </div>

      <form method="post" action="/updateSong" id="premiumtheForm" enctype="multipart/form-data">
        <input type="hidden" name="idMusik" id="idMusik">

        <label for="songsTitle">Songs title</label>
        <input class="form-box" type="text" id="songsTitle" name="songsTitle" />

        <label for="artist">Artist</label>
        <input class="form-box" type="text" id="artist" name="artist" />

        <label for="created-at">Release Date</label>
        <input class="form-box" type="date" id="created-at" name="created-at" />

        <label for="subgenre">Sub genre</label>
        <select class="form-box" name="subgenre">
          <% for (let i=0; i < namaSubgenre.length; i++) { %>
            <option value="<%= namaSubgenre[i].nama %>">
              <%= namaSubgenre[i].nama %>
            </option>
            <% } %>
              <!-- dropdown sub genre, optionny dari table subgenre -->
        </select>
        <label for="songscover">Songs cover</label>
        <div class="form-box">
          <input type="file" name="songscover"><br>
        </div>

        <input class="button" id="add-button-in-popup" type="submit" value="Update" />
      </form>


    </div>
  </div>


  <!--buat logout-->
  <div id="logOutPopup" class="hidden">
    <div id="photo-profile-container">
      <% if(image) { %>
        <img id="photo-profile" src="data:image/jpeg;base64,<%= image.toString('base64') %>" />
        <% } %>
    </div>


    <h1>Hi there, <%= name %>
    </h1>


    <form action="/logout" method="post">
      <input id="logOutButton" class="button" type="submit" value="Log out" />
    </form>

  </div>
  <script>
    document.getElementById("cancelButton").addEventListener("click", function () {
      document.getElementById("addDataPopUp").classList.add("hidden");
    });

    document.getElementById("cancelButton-in-update-popup").addEventListener("click", function () {
      document.getElementById("updateDataPopUp").classList.add("hidden");
    });

    const buttons = document.querySelectorAll('.pencil-button');
    buttons.forEach(button => {
      button.addEventListener('click', (event) => {
        document.getElementById('updateDataPopUp').classList.toggle("hidden");
        const idMusik = event.target.getAttribute('data-song-id');
        // Mengisi nilai input tersembunyi dengan idMusik dan idSubgenre
        const hiddenInputIdMusik = document.getElementById('idMusik');
        hiddenInputIdMusik.value = idMusik;
      });
    });
  </script>
</body>

</html>