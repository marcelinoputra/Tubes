<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>MySpotiti</title>
  <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
  <link rel="stylesheet" href="styleMain.css" />
  <script src="scriptPimpinan.js" defer></script>
</head>

<body onload="getCurrentDate()">
  <div id="whole-page-notuser">
    <div class="sidebar-notuser">
      <img src="/assets/images/MySpotitiLogoWithext.png" id="sidebar-logo" alt="" />
      <div id="sidebar-text">

        <div class="sidebar-text" id="Pimpinan-sidebar-overview">Overview</div>
        <div class="sidebar-text" id="Pimpinan-sidebar-sales">Sales</div>
        <div class="sidebar-text" id="Pimpinan-sidebar" style="color: #F5833F; font-weight: bold;transform: scale(1.1)">
          Statistics</div>

        <div class="sidebar-subtext" id="Pimpinan-sidebar-songs">Songs</div>
        <div class="sidebar-subtext" id="Pimpinan-sidebar-genre"
          style="color: #000000; font-weight: bold;transform: scale(1.1)">Genre</div>
        <div class="sidebar-subtext" id="Pimpinan-sidebar-subgenre">Sub Genre</div>
        <div class="sidebar-subtext" id="Pimpinan-sidebar-user">User</div>


      </div>
    </div>
    <div class="header-notuser">

      <button id="profile-btn" class="round-button-notuser">
        <svg xmlns="http://www.w3.org/2000/svg" height="1.5em" viewBox="0 0 448 512">
          <path
            d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
        </svg>
      </button>
    </div>
    <div class="pimpinan-notmain-content">
      <div class="pimpinan-notmain-content-atas">
        <div class="pimpinan-notmain-content-atas-atas">
          <h1 class="admintable-header-headline">Monthly Genre Statistics</h1>
          <h1 id="currentDate"></h1>
        </div>
        <div class="pimpinan-notmain-content-atas-bawah">
          <div class="filter">
            <form method="get">
              Filter by:
              <select class="filtering" name="optFilter">
                <option value="genre">Genre</option>
                <option value="sortTotalSongs">Sort Total Songs</option>
                <option value="sortTotalStream">Sort Total Streams</option>
              </select>
              is a
              <input class="filtering" type="text" placeholder="type here" name="filterVal" />
              <button class="button" id="go-button">GO</button>
            </form>
          </div>
        </div>

      </div>
      <div class="pimpinan-notmain-content-right">
        <table>
          <thead>
            <tr>
              <th id="pimpinantable-result-id">ID</th>
              <th>Genre</th>
              <th>Total Songs</th>
              <th>Total Streamed This Month</th>
            </tr>
          </thead>
          <tbody id="pimpinansong-table-body">
            <% if (results.length===0) { %>
              <tr>
                <td colspan="5">No results found</td>
              </tr>
              <% } else { %>
                <% results.forEach((song)=> { %>
                  <tr id="<%= song.idMusik %>">
                    <td id="pimpinantable-result-id">
                      <%= song.idGenre %>
                    </td>
                    <td id="pimpinantable-result-title">
                      <%= song.nama %>
                    </td>
                    <td id="pimpinantable-result-artist">
                      <%= song.jumlahPutar %> Songs
                    </td>
                    <td id="pimpinantable-result-total">
                      <%= song.jumlahLagu %> Times
                    </td>
                  </tr>
                  <% }); %>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!--buat logout-->
    <div id="logOutPopup" class="hidden">
      <div id="photo-profile-container">
        <% if(image) { %>
          <img id="photo-profile" src="data:image/jpeg;base64,<%= image.toString('base64') %>" />
          <% } %>
      </div>
      <h1>Hi there, <%= name %>
      </h1>


      <form action="/logout" method="post">
        <input id="logOutButton" class="button" type="submit" value="Log out" />
      </form>

    </div>
</body>

</html>